@model Data.Contacts

@{
    ViewBag.Title = "InsertContacts";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section Scripts
{
    <script>
        var count = 1
        function addTextbox(HolderId, value, txtId) {
            var text = "<div class='row'><span>" + value + "</span><input type='text' id='" + txtId + "' name='" + txtId + count + "' value='" + + "' /></div>";
            var iframe = document.getElementById(HolderId);
            iframe.innerHTML += text;
        }
