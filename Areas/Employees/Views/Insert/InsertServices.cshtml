@model Data.Services

@{
    ViewBag.Title = "InsertServices";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Insert Services</h2>


@using (Html.BeginForm("InsertServices", "Insert", FormMethod.Post))
{
    <div class="Form">
        <div class="row">
            <span>Service Name : </span>
            @Html.TextBoxFor(Model => Model.ServiceName, new { placeholder = "ServiceName" })
        </div>
        <div class="row">
            <span>Service Description : </span>
            @Html.TextAreaFor(Model => Model.Description, new { placeholder = "Description" })
        </div>
        <div class="row">
            <span>Url : </span>
            @Html.TextBoxFor(Model => Model.Url, new { placeholder = "Url" })
        </div>
        <div class="row">
            <span>Preference : </span>
            @Html.TextBoxFor(Model => Model.Preference, new { placeholder = "Preference" })
        </div>
        <div class="row">
            <span>Comments : </span>
            @Html.TextAreaFor(Model => Model.Comments, new { placeholder = "Comments" })
        </div>
        <div class="row">
            <span>Has Parent :</span>
            @*@Html.DropDownListFor(Model => Model.HasParent, new { placeholder = "HasParent" })*@

            @Html.CheckBoxFor(Model => Model.HasParent, new { placeholder = "HasParent" })

        </div>
        <div class="row">
            <span>Parent ID : </span>
            
        </div>
        <div class="row">
            <span>Image Path : </span>
            @Html.TextBoxFor(Model => Model.ObjImage.ImagePath, new { placeholder = "ImagePath" })
        </div>

        <div class="row">
            <input type="submit" id="Submit" value="Submit" class="login" />
        </div>
    </div>
}
