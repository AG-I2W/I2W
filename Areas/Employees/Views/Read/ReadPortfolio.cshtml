@model IEnumerable<Data.Portfolio>

@{
    ViewBag.Title = "ReadPortfolio";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />


<h2>Portfolio</h2>

<div>
    <p>Name : <input type="text" ng-model="name"></p>
    <h1>Hello {{name}}</h1>
</div>

  <!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<div ng-controller="GetPortfolioCtrl">

    @*<ul>
        <li ng-repeat="item in Portfolios">{{item.Title}}</li>
    </ul>*@
    @*<input type="button" value="test" ng-click="clickme()" />*@

    <table class="GridTable" st-table="displayed">
        <tr>
            <th>Title</th>
            <th>Service Name</th>
            <th>URL</th>
            <th>Description</th>
            <th>Technology Used</th>
            <th>Show Description</th>
            <th>Is Exists</th>
            <th>Image</th>
            <th></th>
            <th></th>
        </tr>
        <tbody ng-repeat="item in Portfolios  | orderBy:'objServices.Prefernce' | groupBy:'ServiceId'">
            <tr>
                <td ng-show="item.ServiceId_CHANGED" colspan="8" class="rowheading">{{item.objServices.ServiceName}}</td>
            </tr>
            <tr ng-class-odd="'odd'">
                <td>{{item.Title}}</td>
                <td>{{item.objServices.ServiceName}}</td>
                <td>{{item.Link}}</td>
                <td>{{item.Description}}</td>
                <td>{{item.TechnologyUsed}}</td>
                <td><input type="checkbox" ng-checked="item.ShowDescription == true" /></td>
                <td><input type="checkbox" ng-checked="item.IsExists == true" /></td>
                <td>
                    <img ng-src="~/{{item.objImage.ImagePath}}" />
                </td>
                <td>
                    <a href="" data-toggle="modal" data-target="#myModal"><img src="~/Content/images/edit-icon.png" class="icon" /></a>
                </td>
                <td>
                    <img src="~/Content/images/bin_closed.png" class="icon" />
                </td>
            </tr>
        </tbody>

        @*<tbody ng-repeat="(key, value) in Portfolios">*@
        @*<tr ng-repeat="p in Portfolios | groupBy: groupProperty">
                <td>{{p.Title}}</td>
